<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
  <data>
      <variable
          name="controller"
          type="com.example.s.actuacombatproject.controlers.SubjectOneFragmentController"/>


  </data>
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.s.actuacombatproject.fragments.SubjectOneFragment"
    android:background="@color/colorWrite">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:background="#00cd00"

        android:gravity="center_horizontal">

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="180dp"
            android:layout_gravity="center_vertical"
            android:background="#fffafa"
            android:orientation="vertical">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="110dp">

                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_marginTop="20dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="已完成题库"
                        android:textColor="@color/colorDarkGray"/>
                    <TextView
                        android:textSize="25dp"
                        android:textColor="#00cd00"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1%"/>
                    <Button
                        android:id="@+id/btn_subject_one_question"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/shape"
                        android:text="考题练习"
                        android:textSize="9dp"
                        android:layout_width="80dp"
                        android:layout_height="35dp"
                       />
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_marginTop="20dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="最高得分"
                        android:textColor="@color/colorDarkGray"/>
                    <TextView
                        android:textColor="#00cd00"
                        android:textSize="25dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="未考试"/>
                    <Button
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/shape"
                        android:text="模拟考试"
                        android:textSize="9dp"
                        android:layout_width="80dp"
                        android:layout_height="35dp" />
                </LinearLayout>
            </LinearLayout>



            <LinearLayout
                android:layout_width="350dp"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_weight="1"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@mipmap/exam_function_error_icon" />

                <ImageView
                    android:layout_weight="1"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@mipmap/exam_function_collection_icon" />

                <ImageView
                    android:layout_weight="1"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@mipmap/exam_function_undo_icon" />

                <ImageView
                    android:layout_weight="1"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@mipmap/exam_function_remove_icon" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:gravity="center_horizontal"
                    android:layout_weight="1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="错题本"
                    android:textColor="@color/colorBlack"
                    android:textSize="14sp"/>

                <TextView
                    android:gravity="center_horizontal"
                    android:layout_weight="1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="收藏夹"
                    android:textColor="@color/colorBlack"
                    android:textSize="14sp"/>
                <TextView
                    android:gravity="center_horizontal"
                    android:layout_weight="1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="未做题"
                    android:textColor="@color/colorBlack"
                    android:textSize="14sp"/>
                <TextView
                    android:gravity="center_horizontal"
                    android:layout_weight="1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="已排除"
                    android:textColor="@color/colorBlack"
                    android:textSize="14sp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>
</layout>