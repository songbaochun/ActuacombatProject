<layout>
<data>
    <variable
        name="controller"
        type="com.example.s.actuacombatproject.controlers.SideslipFragmentController"/>
</data>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="240dp"
    android:layout_height="match_parent"
    tools:context="com.example.s.actuacombatproject.fragments.SideslipFragment"
    android:background="@color/colorDarkGray">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="80dp"
       android:orientation="horizontal"
       android:background="@color/colorWrite">
       <ImageView
           android:layout_width="50dp"
           android:layout_height="50dp"
           android:src="@mipmap/coach_info_head_sculpture"
           android:layout_marginTop="20dp"
           android:layout_marginLeft="20dp"/>
       <LinearLayout
           android:id="@+id/sideslipLinearLayout"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:layout_gravity="center_vertical"
           android:layout_marginLeft="14dp">

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textColor="@color/colorBlack"
               android:text="立即登录"
               android:textSize="18dp"
               android:layout_marginTop="5dp"/>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textColor="@color/colorBlack"
               android:text="北京驾校|小车题库"
               android:textSize="16dp"
               android:layout_marginTop="5dp"/>


       </LinearLayout>


   </LinearLayout>

</FrameLayout>
</layout>